LOG_LEVEL=INFO
MCP_SERVER_PORT=8000
MCP_SERVER_HOST=0.0.0.0
# Path to the policy YAML file (override if needed)
POLICY_PATH=./prompts/policy.prompt.yaml
# Comma-separated list of rude/abusive words for policy enforcement
RUDE_WORDS=worthless,useless
# Interval (in seconds) to check for policy.prompt.yaml changes (default: 30)
POLICY_RELOAD_INTERVAL=30

# OTEL/Observability settings
OTEL_SERVICE_NAME=policy-mcp-server
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_SAMPLER=parentbased_always_on
OTEL_TRACES_SAMPLER_ARG=1.0
OTEL_METRICS_EXPORT_INTERVAL=60000
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=dev
# Add more OTEL config as needed for your deployment

# OPA/Open Policy Agent settings
OPA_URL=http://localhost:8181
OPA_POLICY_PACKAGE=policy
OPA_POLICY_RULE=allow
